<form {{on "submit" this.handleSubmit}}>
    <div>
         <label for="usernameTest">
            Username
        </label>
        <br /><br />
        <Input @type="text" @value={{this.username}} name="usernameTest" />
    </div>
    <br /><br />
    <div>
        <label for="passwordTest">
            Password
        </label>
        <br /><br />
        <Input @type="password" @value={{this.password}} name="passwordTest" />
    </div>
    <br /><br />
    <button type="submit">Login</button>

    {{#if (eq this.loginStt 0) }}
    {{else if (eq this.loginStt 1) }}
    <p class="status" id="sign-in-success">Login success !!!</p>
    {{else}}
    <p class="status" id="sign-in-fail">Login failed !!!</p>
    {{/if}}
</form>